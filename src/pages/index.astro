---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Climat', url: 'blog/tags/climat/' },
  { name: 'Salaires', url: 'blog/tags/salaires/' },
  { name: 'Égalité femmes-hommes', url: 'blog/tags/%C3%A9galit%C3%A9%20femmes-hommes/' },
  { name: 'Pauvreté', url: 'blog/tags/pauvret%C3%A9/' },
  { name: 'Exclusions', url: 'blog/tags/exclusions/' },
  { name: 'Services publics', url: 'blog/tags/services%20publics/' },
  { name: 'Francophonie', url: 'blog/tags/francophonie/' },
];
---

<Layout
  title='Accueil'
  pageTitle='Accueil'
  description='Site internet du PS Grand Chasseral'
>
  <main class='bg-red p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Info</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              PS <a
                class='text-white'>Grand Chasseral</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Fédération régionale du Parti Socialiste dans le Jura bernois
            </p>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Nous prenons position
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Je m'engage!
          </h2>
          <p class='poppins'>
            Pour ma famille, mes amis, ma région, avec ou sans chichis
          </p>
          <br>
           <Button target={'_self'} href='/contact/'>
              Contact &rarr;
            </Button>
          <br>
          <br>
            <Button target={'_self'} href='/support/'>
              Soutenez-nous &rarr;
            </Button>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
